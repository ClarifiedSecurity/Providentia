!!!
%html.overscroll-y-none
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title
      Providentia
      - if content_for?(:title)
        ยง
        = content_for(:title)

    = csrf_meta_tags
    = csp_meta_tag
    = javascript_tag nonce: true do
      :plain
        if (localStorage.theme === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
          document.documentElement.classList.add('dark')
        } else {
          document.documentElement.classList.remove('dark')
        }
    = stylesheet_link_tag "tailwind", "data-turbo-track": "reload"
    = stylesheet_link_tag "highlight"
    = javascript_importmap_tags

    %link{rel: "apple-touch-icon", sizes: "180x180", href: "/apple-touch-icon.png"}
    %link{rel: "icon", type: "image/png", sizes: "32x32", href: "/favicon-32x32.png"}
    %link{rel: "icon", type: "image/png", sizes: "16x16", href: "/favicon-16x16.png"}
    %link{rel: "manifest", href: "/site.webmanifest"}

  - if user_signed_in?
    %body.w-full.font-raleway.antialiased.bg-gray-100.text-gray-600.dark:bg-gray-900.dark:text-gray-200.pt-14.pb-48{data: {controller: "search"}}
      = render Layout::Header::Component.new
      = render select_contextual_menu_component if select_contextual_menu_component
      %main.static-width
        %aside#flashes= render Flash::Component.with_collection(flash.to_a)
        = yield

      = render Search::Component.new
      = render Layout::Footer::Component.new
  - else
    = render 'not_signed_in'
