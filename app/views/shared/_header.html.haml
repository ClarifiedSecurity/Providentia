%header.sticky.top-0.bg-white.dark:bg-gray-600.border-b.border-gray-200.dark:border-gray-500.z-30
  .px-4.sm:px-6.lg:px-8
    .flex.items-center.h-16.-mb-px.gap-x-1
      %button.lg:hidden{"aria-controls" => "sidebar", "data-action" => "click->slideover#toggle click@window->slideover#hide"}
        %svg.w-6.h-6.fill-current{:viewBox => "0 0 24 24"}
          %rect{:height => "2", :width => "16", :x => "4", :y => "5"}
          %rect{:height => "2", :width => "16", :x => "4", :y => "11"}
          %rect{:height => "2", :width => "16", :x => "4", :y => "17"}

      .flex.text-2xl.font-bold.font-lusitana.grow
        = render HeaderTextComponent.new(exercise: @exercise, text: content_for(:heading))

      .flex.items-center
        - if content_for?(:new_url)
          = link_to content_for(:new_url), class: 'form-submit-add h-10' do
            %i.fas.fa-plus.self-center
            Add

          %hr.w-px.h-6.bg-gray-200.dark:bg-gray-400.dark:border-gray-400.mx-3/

        %button.w-8.h-8.flex.items-center.justify-center.bg-gray-100.hover:bg-gray-200.transition.duration-150.rounded-full{data: { action: "click->search#open" }}
          %svg.w-4.h-4{:viewbox => "0 0 16 16", :xmlns => "http://www.w3.org/2000/svg"}
            %path.fill-current.text-gray-500{:d => "M7 14c-3.86 0-7-3.14-7-7s3.14-7 7-7 7 3.14 7 7-3.14 7-7 7zM7 2C4.243 2 2 4.243 2 7s2.243 5 5 5 5-2.243 5-5-2.243-5-5-5z"}
            %path.fill-current.text-gray-400{:d => "M15.707 14.293L13.314 11.9a8.019 8.019 0 01-1.414 1.414l2.393 2.393a.997.997 0 001.414 0 .999.999 0 000-1.414z"}
        %hr.w-px.h-6.bg-gray-200.dark:bg-gray-400.dark:border-gray-400.mx-3/
        = render 'shared/user_menu'
